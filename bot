    <script>
        const responses = {
            "what are your office hours?": "We're open Monday through Friday from 8:00 AM to 6:00 PM, and Saturdays from 9:00 AM to 2:00 PM. We're closed on Sundays. Need to schedule an appointment? I can help with that!",
            "do you accept my insurance?": "We accept most major dental insurance plans including Delta Dental, Cigna, MetLife, Aetna, and United Healthcare. If you'd like, you can tell me your insurance provider and I can verify if we're in-network. We also offer flexible payment plans for patients without insurance!",
            "how much does teeth whitening cost?": "Our professional teeth whitening service costs $399 and includes a custom-fitted tray for at-home maintenance. Most patients see results 3-4 shades whiter in just one visit! We also offer a premium in-office treatment for $599. Would you like to schedule a consultation?",
            "do you offer emergency services?": "Yes! We provide same-day emergency dental services for urgent issues like severe pain, knocked-out teeth, broken crowns, or dental abscesses. Please call us immediately at (555) 123-4567 if you have a dental emergency, and we'll get you in as soon as possible - often within hours.",
            "how do i schedule an appointment?": "Scheduling is easy! You can call us at (555) 123-4567, book online through our website's booking system, or I can have someone from our team reach out to you. What works best for you? We typically have appointments available within 3-5 business days, and emergency slots for urgent needs."
        };

        function askQuestion(question) {
            document.getElementById('userInput').value = question;
            sendMessage();
        }

        function sendMessage() {
            const input = document.getElementById('userInput');
            const message = input.value.trim();
            
            if (!message) return;

            const messagesContainer = document.getElementById('chatMessages');
            
            const userMessageDiv = document.createElement('div');
            userMessageDiv.className = 'user-message message';
            userMessageDiv.textContent = message;
            messagesContainer.appendChild(userMessageDiv);
            
            input.value = '';
            
            messagesContainer.scrollTop = messagesContainer.scrollHeight;
            
            const typingDiv = document.createElement('div');
            typingDiv.className = 'bot-message message typing-indicator';
            typingDiv.innerHTML = '<div class="typing-dot"></div><div class="typing-dot"></div><div class="typing-dot"></div>';
            messagesContainer.appendChild(typingDiv);
            messagesContainer.scrollTop = messagesContainer.scrollHeight;
            
            setTimeout(() => {
                messagesContainer.removeChild(typingDiv);
                
                const botMessageDiv = document.createElement('div');
                botMessageDiv.className = 'bot-message message';
                
                const lowerMessage = message.toLowerCase();
                let response = responses[lowerMessage];
                
                if (!response) {
                    for (const [key, value] of Object.entries(responses)) {
                        if (lowerMessage.includes(key.split(' ')[0]) || key.includes(lowerMessage.split(' ')[0])) {
                            response = value;
                            break;
                        }
                    }
                }
                
                if (!response) {
                    response = "That's a great question! While I can answer common questions about our hours, insurance, services, and appointments, I'd recommend calling our office at (555) 123-4567 for more specific information. Our friendly staff would be happy to help! Is there anything else I can answer from our quick questions above?";
                }
                
                botMessageDiv.textContent = response;
                messagesContainer.appendChild(botMessageDiv);
                messagesContainer.scrollTop = messagesContainer.scrollHeight;
            }, 1500);
        }

        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({ behavior: 'smooth', block: 'start' });
                }
            });
        });
    </script>
</body>
